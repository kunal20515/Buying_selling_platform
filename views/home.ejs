        <script>
          var globalF = 0;
          function Enabled(box){
            var from = document.getElementById("from");
            var to = document.getElementById("to");
            var remove = document.getElementById("remove");
            if(box.checked){
              globalF+= 1;
              from.disabled = false;
              to.disabled = false;
              remove.disabled = true;
            }else {
              globalF -= 1;
              if(globalF == 0){
                from.disabled = true;
                to.disabled = true;
                remove.disabled = false;
              }
            }
          }
        </script>
