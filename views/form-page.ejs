<html>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  
    <style>
      textarea {
      width: 100%;
      height: 150px;
      padding: 12px 20px;
      box-sizing: border-box;
      border: 2px solid #ccc;
      border-radius: 4px;
      resize: none;
}
      input[type=text], input[type=number] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }
      
      input[type=submit], input[type=file]{
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      
      input[type=submit]:hover {
        background-color: #45a049;
      }
      
      div {
        border-radius: 5px;
        width: 50vw;
        background-color: #f2f2f2;
        padding: 20px;
        margin:0 auto;
      }
      </style>
    <body>
      <div>
        <h1>Kindly Fill Out The Form Below</h1>
        <% if(name == "car"){%>
            <form action = "/add-pdt/?name=<%=name%>" method="post" enctype="multipart/form-data">
                <input type="text" name = "name" placeholder="Enter Car's name" required >
                <input type="number" name = "purchaseYear" placeholder="Enter Purchase Year"min="1901" max="2155" required>
                
                <input type="radio" name="fuel"id = "petrol"   value="Petrol" required>
                <label for="petrol">Petrol</label><br>
                <input type="radio" name="fuel"id = "diesel"  value="Diesel" required>
                <label for="diesel">Diesel</label><br>
                <input type="radio" name="fuel"id = "gasoline"  value="Gasoline" required>
                <label for="gasoline">Gasoline</label><br>
                <input type="radio" name="fuel"id = "ethanol"  value="Ethanol" required>
                <label for="ethanol">Ethanol</label><br>
                <input type="radio" name="fuel" id = "cng" value ="Cng" required>
                <label for="cng"> CNG </label><br>
                <input type="radio" name="fuel"id ="lpg" value="Lpg" required>
                <label for="lpg"> LPG </label><br>
                <input type="radio" name="fuel"id = "bio-diesel"  value="Bio-diesel" required>
                <label for="bio-diesel"> Bio-Diesel </label><br>
                <input type="radio" name="fuel" id = "electricity" value="Electricity" required>
                <label for="electricity"> Electricity </label><br>
                
                <input type="text" name = "transmission" placeholder="Transmission">
                <input type="number" step="0.0001" name = "kmDriven" placeholder="Kms-Driven">
                <input type="number" name = "noOfOwners" placeholder="Number of Owners" min="1">
                <textarea type="text"name = "description" placeholder="Add a product Description (Tell something more about the product)" required></textarea>
                <input type="number" step="0.0001" name = "price" placeholder="Set a price" required>
                <input type="file" name = "image" accept="" required>
                <input type="text" name = "location" placeholder="Your Location" required>
                <input type="submit" placeholder="submit">
            </form>   
          <% } %>
        
          <% if(name == "phone"){%>
            <form action = "/add-pdt/?name=<%=name%>" method="post" enctype="multipart/form-data">
                <input type="text" name = "name" placeholder="Phone Name (Brand)" required>
                <input type="number" name = "purchaseYear" placeholder="Enter Purchase Year" required min="1901" max="2155">
                <input type="number" name = "noOfOwners" placeholder="Number of Owners" min="1">
                <textarea type="text"name = "description" placeholder="Add a product Description (Tell something more about the product)" required></textarea>

                <input type="number" step="0.0001" name = "price" placeholder="Set a price" required>
                <input type="file" name = "image" accept="" required>
                <input type="text" name = "location" placeholder="Your Location" required>
                <input type="submit" placeholder="submit">
            </form>   
          <% } %>

          <% if(name == "pet"){%>
            <form action = "/add-pdt/?name=<%=name%>" method="post" enctype="multipart/form-data">
                <input type="text" name = "name" placeholder="Enter Pet's name" required>
                <input type="number" step="0.01" name = "age" placeholder="Enter age" required min="0.1">
                <textarea type="text"name = "description" placeholder="Add a product Description (Tell something more about the product)" required></textarea>

                <input type="number" step="0.0001" name = "price" placeholder="Set a price" required>
                <input type="file" name = "image" accept="" required>
                <input type="text" name = "location" placeholder="Your Location" required>
                <input type="submit" placeholder="submit">
            </form>   
          <% } %>

          <% if(name == "furniture"){%>
            <form action = "/add-pdt/?name=<%=name%>" method="post" enctype="multipart/form-data">
                <input type="text" name = "name" placeholder="Enter Product name" required>
                <textarea type="text"name = "description" placeholder="Add a product Description (Tell something more about the product)" required></textarea>

                <input type="number" step="0.0001" name = "price" placeholder="Set a price" required>
                <input type="file" name = "image" accept="" required>
                <input type="text" name = "location" placeholder="Your Location" required>
                <input type="submit" placeholder="submit">
            </form>   
          <% } %>

          <% if(name == "electronicapp"){%>
            <form action = "/add-pdt/?name=<%=name%>" method="post" enctype="multipart/form-data">
              <input type="text" name = "name" placeholder="Name of the Appliance" required>
              <input type="number" name = "purchaseYear" placeholder="Enter Purchase Year" required min="1901" max="2155">
              <input type="number" name = "noOfOwners" placeholder="Number of Owners" min="1">
              <textarea type="text"name = "description" placeholder="Add a product Description (Tell something more about the product)" required></textarea>

              <input type="number" step="0.0001" name = "price" placeholder="Set a price" required>
              <input type="file" name = "image" accept="" required>
              <input type="text" name = "location" placeholder="Your Location" required>
              <input type="submit" placeholder="submit">
            </form>   
          <% } %>


          <% if(name == "home"){%>
            <form action = "/add-pdt/?name=<%=name%>" method="post" enctype="multipart/form-data">
                <input type="text" name = "adTitle" placeholder="Ad-Title" required>
                <input type="text" name = "furnishing" placeholder="Enter furnishing">
                <input type="number" name = "bedRooms" placeholder="Number of bedrooms" required>
                <input type="number" step="0.0001" name = "superBuidupArea" placeholder="Enter Super Builtup area (ft²)" required>
                <input type="number" step="0.0001" name = "carpetArea" placeholder="Enter Carpet Area (ft²)" required>

                <input type="number" name = "floors" placeholder="Number of floors">
                <input type="number" name = "carParking" placeholder="Total Car Parking">
                <input type="text" name = "facing" placeholder="Enter Facing">

                <textarea type="text"name = "description" placeholder="Add a product Description (Tell something more about the product)" required></textarea>

                <input type="number" step="0.0001" name = "price" placeholder="Set a price" required>
                <input type="file" name = "image" accept="" required>
                <input type="text" name = "location" placeholder="Your Location" required>
                <input type="submit" placeholder="submit">
            </form>   
          <% } %>


          <% if(name == "bike"){%>
            <form action = "/add-pdt/?name=<%=name%>" method="post" enctype="multipart/form-data">
                <input type="text" name = "name" placeholder="Enter Bike's name" required>
                <input type="number" name = "purchaseYear" placeholder="Enter Purchase Year" required min="1901" max="2155">
                <input type="number" step="0.0001" name = "kmDriven" placeholder="Kms-Driven">
                <input type="number" name = "noOfOwners" placeholder="Number of Owners" min="1">
                <textarea type="text"name = "description" placeholder="Add a product Description (Tell something more about the product)" required></textarea>

                <input type="number" step="0.0001" name = "price" placeholder="Set a price" required>
                <input type="file" name = "image" accept="" required>
                <input type="text" name = "location" placeholder="Your Location" required>
                <input type="submit" placeholder="submit">
            </form>   
          <% } %> 

          <% if(name == "other"){%>
            <form action = "/add-pdt/?name=<%=name%>" method="post" enctype="multipart/form-data">
              <input type="text" name = "name" placeholder="Enter Product's name" required>
              <textarea type="text"name = "description" placeholder="Add a product Description (Tell something more about the product)" required></textarea>

              <input type="number" step="0.0001" name = "price" placeholder="Set a price" required>
              <input type="file" name = "image" accept="" required>
              <input type="text" name = "location" placeholder="Your Location" required>
              <input type="submit" placeholder="submit">
            </form>   
          <% } %>
        </div>
